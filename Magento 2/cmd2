#After downloading Magento 2 to home directory

cd /var/www/html/coul.io/public_html
mv ~/Magento-CE-2.*.tar.gz .
tar -xvf Magento-CE-2.*.tar.gz

sudo useradd magento
sudo usermod -g apache magento

sudo find var vendor pub/static pub/media app/etc -type f -exec chmod g+w {} \;
sudo find var vendor pub/static pub/media app/etc -type d -exec chmod g+ws {} \;
sudo chown -R magento:apache .
sudo chmod u+x bin/magento

sudo systemctl restart httpd

echo "Go to domain and setup admin info"



